doctype html
html
    head
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css")
        block info
            title Identificator
        
        block head
    
    body
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
            a.navbar-brand(href="/") Identificator
            button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                span.navbar-toggler-icon

            .collapse.navbar-collapse#navbarSupportedContent
                ul.navbar-nav.mr-auto
                    li.nav-item
                        a.nav-link(href="https://github.com/975miles/Identificator") GitHub
                    li.nav-item
                        a.nav-link(href="/examples") Code examples
                if (user == undefined)
                    a.nav-link.btn.btn-outline-success(href="/login") Login
                else
                    button.nav-link.btn.btn-outline-secondary.dropdown-toggle#userActionsDropdown(role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="padding: 4px 8px")
                        img.rounded.border.border-dark(src=`/avatar/${user.id}.png?size=20` style="margin-top:-3px;margin-right:3px;")
                        span= user.name
                    .dropdown-menu.dropdown-menu-right(aria-labelledby="userActionsDropdown")
                        a.dropdown-item(href=`/u/${user.id}/`) Profile
                        a.dropdown-item(href=`/edit-profile`) Edit profile
                        .dropdown-divider
                        a.dropdown-item(href="/logout") Logout
        .container-fluid
            block content
            script(src="https://code.jquery.com/jquery-3.4.1.min.js")
            script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js")
            script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js")
            script(src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/5.5.2/bootbox.min.js")
            script(src="/js/js.js")
            block js